{
  "meta": {
    "$_GET": [
      {
        "type": "text",
        "name": "sort"
      },
      {
        "type": "text",
        "name": "dir"
      }
    ],
    "$_POST": [
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {},
            "core:email": {}
          }
        },
        "name": "email"
      }
    ]
  },
  "exec": {
    "steps": [
      "lib/utils/messagesHandler",
      {
        "name": "message",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{messageHandler}}"
        },
        "meta": [],
        "outputType": "object"
      },
      "lib/utils/getRandomCode",
      {
        "name": "code",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{g_code}}"
        },
        "meta": [],
        "outputType": "text",
        "output": false
      },
      {
        "name": "exists",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "EnyrgyDB",
          "sql": {
            "type": "SELECT",
            "distinct": false,
            "columns": [
              {
                "table": "r",
                "column": "name",
                "alias": "role"
              },
              {
                "table": "u",
                "column": "id",
                "alias": "id"
              },
              {
                "table": "u",
                "column": "email"
              },
              {
                "table": "r",
                "column": "adminView"
              },
              {
                "table": "r",
                "column": "mobileView"
              },
              {
                "table": "r",
                "column": "facilityView"
              }
            ],
            "table": {
              "name": "user",
              "alias": "u"
            },
            "joins": [
              {
                "table": "detailsUser",
                "column": "*",
                "alias": "du",
                "type": "LEFT",
                "clauses": {
                  "condition": "AND",
                  "rules": [
                    {
                      "table": "du",
                      "column": "userId",
                      "field": "du.userId",
                      "operation": "=",
                      "operator": "equal",
                      "value": {
                        "table": "u",
                        "column": "id",
                        "field": "u.id"
                      }
                    }
                  ]
                },
                "primary": "id"
              },
              {
                "table": "roles",
                "column": "*",
                "alias": "r",
                "type": "LEFT",
                "clauses": {
                  "condition": "AND",
                  "rules": [
                    {
                      "table": "r",
                      "column": "id",
                      "field": "r.id",
                      "operation": "=",
                      "operator": "equal",
                      "value": {
                        "table": "du",
                        "column": "rolesId",
                        "field": "du.rolesId"
                      }
                    }
                  ]
                },
                "primary": "id"
              }
            ],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "u.email",
                  "field": "u.email",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{$_POST.email.lowercase()}}",
                  "data": {
                    "table": "u",
                    "column": "email",
                    "type": "text",
                    "columnObj": {
                      "type": "string",
                      "maxLength": 255,
                      "primary": false,
                      "unique": false,
                      "nullable": true,
                      "name": "email"
                    }
                  },
                  "operation": "="
                }
              ],
              "conditional": null,
              "valid": true
            },
            "orders": [],
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.email.lowercase()}}",
                "test": "eduardo.gonzalez@foundersworkshop.com"
              }
            ],
            "primary": "id",
            "query": "select \"r\".\"name\" as \"role\", \"u\".\"id\" as \"id\", \"u\".\"email\", \"r\".\"adminView\", \"r\".\"mobileView\", \"r\".\"facilityView\" from \"user\" as \"u\" left join \"detailsUser\" as \"du\" on \"du\".\"userId\" = \"u\".\"id\" left join \"roles\" as \"r\" on \"r\".\"id\" = \"du\".\"rolesId\" where \"u\".\"email\" = ?"
          }
        },
        "meta": [
          {
            "type": "text",
            "name": "role"
          },
          {
            "type": "number",
            "name": "id"
          },
          {
            "type": "text",
            "name": "email"
          },
          {
            "type": "boolean",
            "name": "adminView"
          },
          {
            "type": "boolean",
            "name": "mobileView"
          },
          {
            "type": "boolean",
            "name": "facilityView"
          }
        ],
        "type": "dbconnector_single",
        "outputType": "object",
        "output": true
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{exists.id&&(exists.adminView||exists.facilityView)}}",
          "then": {
            "steps": [
              {
                "name": "expiration_code",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "value": "{{NOW.dateAdd(\"days\",1)}}"
                },
                "meta": [],
                "outputType": "text"
              },
              {
                "name": "updateUser",
                "module": "dbupdater",
                "action": "update",
                "options": {
                  "connection": "EnyrgyDB",
                  "sql": {
                    "type": "update",
                    "values": [
                      {
                        "table": "user",
                        "column": "verificationCode",
                        "type": "text",
                        "value": "{{code}}"
                      },
                      {
                        "table": "user",
                        "column": "verificationCodeExpire",
                        "type": "datetime",
                        "value": "{{expiration_code}}"
                      },
                      {
                        "table": "user",
                        "column": "updatedAt",
                        "type": "datetime",
                        "value": "{{NOW}}"
                      }
                    ],
                    "table": "user",
                    "wheres": {
                      "condition": "AND",
                      "rules": [
                        {
                          "id": "id",
                          "field": "id",
                          "type": "double",
                          "operator": "equal",
                          "value": "{{exists.id}}",
                          "data": {
                            "column": "id"
                          },
                          "operation": "="
                        }
                      ],
                      "conditional": null,
                      "valid": true
                    },
                    "returning": "id",
                    "query": "update \"user\" set \"verificationCode\" = ?, \"verificationCodeExpire\" = ?, \"updatedAt\" = ? where \"id\" = ? returning \"id\"",
                    "params": [
                      {
                        "name": ":P1",
                        "type": "expression",
                        "value": "{{code}}",
                        "test": ""
                      },
                      {
                        "name": ":P2",
                        "type": "expression",
                        "value": "{{expiration_code}}",
                        "test": ""
                      },
                      {
                        "name": ":P3",
                        "type": "expression",
                        "value": "{{NOW}}",
                        "test": ""
                      },
                      {
                        "operator": "equal",
                        "type": "expression",
                        "name": ":P4",
                        "value": "{{exists.id}}",
                        "test": ""
                      }
                    ]
                  }
                },
                "meta": [
                  {
                    "name": "affected",
                    "type": "number"
                  }
                ]
              },
              {
                "name": "",
                "module": "mail",
                "action": "send",
                "options": {
                  "instance": "sendgrid",
                  "subject": "Your authentication link",
                  "fromName": "Enyrgy Authentication Link",
                  "fromEmail": "{{$_ENV.SENDGRID_EMAIL}}",
                  "toEmail": "{{$_POST.email}}",
                  "body": "<p>Welcome to the Enyrgy Admin. Please click the link below to log in.<br>  <a href={{$_ENV.HOST}}/api/auth/verify?code={{code}}>Click here to login</a></p>",
                  "contentType": "html"
                }
              }
            ]
          },
          "else": {
            "steps": {
              "name": "",
              "module": "core",
              "action": "response",
              "options": {
                "status": 400,
                "data": "{{message.ERROR_SIGNIN}}"
              }
            }
          }
        },
        "outputType": "boolean"
      }
    ]
  }
}